<%= form_with model: cargo do |form|%>
  <div>
   <h3> <%= form.label :name%> </h3> 
    <%= form.text_field :name%>
 </div>

  <div> 
    <h3> <%= form.label :surname%> </h3>
    <%= form.text_field :surname%>
  </div>

  <div> 
    <h3> <%= form.label :middle_name%> </h3>
    <%= form.text_field :middle_name%>
  </div>

  <div> 
    <h3> <%= form.label :phone%> </h3>
    <%= form.telephone_field :phone%> 
  </div>

  <div> 
    <h3> <%= form.label :email%> </h3>
    <%= form.email_field :email%>
  </div>

  <div> 
    <h3> <%= form.label :weight%> </h3>
    <%= form.number_field :weight, step: :any%>
  </div>

  <div> 
    <h3> <%= form.label :length%> </h3>
    <%= form.number_field :length%>
  </div>

  <div>
    <h3> <%= form.label :width%> </h3>
    <%= form.number_field :width%>
  </div>

  <div> 
    <h3> <%= form.label :height%> </h3>
    <%= form.number_field :height%> 
  </div>

  <div> 
    <h3> <%= form.label :origins%> </h3>
    <%= form.text_field :origins%> 
  </div>

  <div> 
    <h3> <%= form.label :destinations%> </h3>
    <%= form.text_field :destinations%> 
  </div>

  <h3>
    <%= form.submit "CREATE" %>
  </h3>
<%end%>

<div>
  <h2>
    <%= link_to "BACK", cargos_path %>
  </h2>
</div>